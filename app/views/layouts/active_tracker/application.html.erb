<!DOCTYPE html>
<html>
  <head>
    <title>ActiveTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'active_tracker/active_tracker', media: 'all' %>
    <%= javascript_include_tag 'active_tracker/active_tracker' %>
  </head>

  <body class="bg-gray-300 p-3">
    <div class="container mx-auto">
      <header class="border-b-2 border-gray-400 flex pb-3 items-center">
        <div class="flex-1">
          <%= link_to image_tag("active_tracker/logo.svg"), ActiveTracker::Configuration.mountpoint %>
        </div>
        <div class="flex-1 text-right">
          <button class="border-2 border-blue-600 px-3 py-2 rounded-lg">
            <div class="w-4 h-4 text-blue-600">
              <%= inline_svg "active_tracker/reload.svg" %>
            </div>
          </button>
        </div>
      </header>

      <div class="mt-5 flex">
        <nav class='w-48 mt-1'>
          <% ActiveTracker::Configuration.plugins.each do |plugin| %>
            <%= render "active_tracker/common/plugin_nav", plugin: plugin %>
          <% end -%>
        </nav>
        <article class="flex-1">
          <%= yield %>
        </article>
      </div>
    </div>
  </body>
</html>
